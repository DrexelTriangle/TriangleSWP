<!-- Top news section feature -->
{% if loop.first %}
	<section id="section-news" class="fp-2x3-feature">
	<div class="feature">
		<a href="{{ url(article) }}"><img src="https://www.thetriangle.org/wp-content/uploads/2019/09/police.png" class="attachment-post-thumbnail size-post-thumbnail wp-post-image jetpack-lazy-image jetpack-lazy-image--handled" alt="" srcset="https://www.thetriangle.org/wp-content/uploads/2019/09/police.png 1152w, https://www.thetriangle.org/wp-content/uploads/2019/09/police-300x203.png 300w, https://www.thetriangle.org/wp-content/uploads/2019/09/police-768x519.png 768w, https://www.thetriangle.org/wp-content/uploads/2019/09/police-1024x692.png 1024w" data-lazy-loaded="1" sizes="(max-width: 1152px) 100vw, 1152px" width="1152" height="779"></a>
		<a class="text-headline-large" href="{{ url(article) }}">{{ article.title }}</a>
		
		{% if article.authors %}
			{% for author in article.authors %} 
				<div class="category-author">By {{ author.name }} | {{ article.updatedAt|date("M. j, Y") }}</div>
			{% endfor %}
			{% elseif article.metadata.byline %}
				<div class="category-author">By {{ article.metadata.byline }} | {{ article.updatedAt|date("M. j, Y") }}</div>
		{% endif %}

		{% if article.lead == "" %}
      		<div class="category-tease">{{ article.body|striptags|safeTruncate(160,"...") }}</div>
    	{% else %}
      		<div class="category-tease">{{ article.lead|striptags|safeTruncate(160,"...") }}</div>
    	{% endif %}
	</div>
{% endif %}

